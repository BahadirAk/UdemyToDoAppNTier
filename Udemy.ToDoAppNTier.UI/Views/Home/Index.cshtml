@model List<WorkListDto>

<html>
<head>
    <title>Todo App</title>
    <link href="~/twitter-boostrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-2">
        <div class="text-end my-2">
            <a asp-action="Create" asp-controller="Home" class="btn btn-primary btn-sm">Yeni İş Ekle</a>
        </div>
        <table class="table table-hover table-bordered table-sm">
            <thead>
                <tr>
                    <th>İş</th>
                    <th>Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var work in Model)
                {
                    <tr>
                        <td>@work.Definition</td>
                        <td>@(work.IsCompleted?"Tamamlandı":"Tamamlanmadı")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@work.Id" class="btn btn-warning btn-sm">Güncelle</a>
                            <a asp-action="Remove" asp-controller="Home" asp-route-id="@work.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>